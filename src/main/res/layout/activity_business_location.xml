<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_business_location"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.ankita.loginapp.BusinessLocationActivity">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="match_parent"
            android:hint="Business Address"
            android:layout_marginTop="10dp"
            android:inputType="textPostalAddress"
            android:textStyle="bold"
            android:editable="false"
            android:id="@+id/editBusinessAddress"
            android:layout_height="wrap_content" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textAddressOptional"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <EditText
        android:layout_width="match_parent"
        android:hint="Address Optional"
        android:layout_marginTop="10dp"
        android:inputType="textPostalAddress"
        android:textStyle="bold"
        android:id="@+id/editOptionalAddress"
        android:layout_height="wrap_content" />
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/textPersonName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <EditText
        android:layout_width="match_parent"
        android:id="@+id/editPersonName"
        android:layout_marginTop="10dp"
        android:hint="Person Name"
        android:textStyle="bold"
        android:inputType="text"
        android:layout_height="wrap_content" />
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/textPersonNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="match_parent"
            android:id="@+id/editPersonNo"
            android:layout_marginTop="10dp"
            android:hint="Person Contact No"
            android:textStyle="bold"
            android:inputType="phone"
            android:layout_height="wrap_content" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:layout_width="match_parent"
        android:text="Submit"
        android:textStyle="bold"
        android:textSize="15dp"
        android:id="@+id/btn_BusinessLocationSubmit"
        android:background="@drawable/my_button"
        android:layout_marginTop="15dp"
        android:textAlignment="center"
        android:layout_height="wrap_content" />


</LinearLayout>
