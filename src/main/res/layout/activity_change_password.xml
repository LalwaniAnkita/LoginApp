<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_change_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="30dp"
    android:orientation="vertical"
    tools:context="com.example.ankita.loginapp.ChangePassword">
    <android.support.design.widget.TextInputLayout
        android:id="@+id/textCurrentPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="match_parent"
            android:id="@+id/editCurrentPassword"
            android:textStyle="bold"
            android:hint="Current Password"
            android:inputType="textPassword"
            android:layout_height="40dp" />
   </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/textNewpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="match_parent"
            android:id="@+id/editNewpassword"
            android:textStyle="bold"
            android:hint="Password"
            android:inputType="textPassword"
            android:layout_height="40dp" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/textConfirmPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <EditText
        android:layout_width="match_parent"
        android:id="@+id/editConfirmPassword"
        android:textStyle="bold"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:layout_height="40dp" />
     </android.support.design.widget.TextInputLayout>-->

    <Button
        android:id="@+id/btnSubmitChangePassword"
        style="@style/AlertDialog.AppCompat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/my_button"
        android:text="Submit"
        android:textAlignment="center"
        android:textSize="17sp" />

</LinearLayout>
